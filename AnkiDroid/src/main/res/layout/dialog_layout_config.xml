<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_layout_config_background"
    android:clickable="false"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingHorizontal="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"


        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/login_delete_normal" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="样式布局"
            android:textColor="?attr/primaryTextColor222222"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/reset"
            android:layout_toEndOf="@id/title"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="重置"
            android:textColor="@color/primary_color"
            android:textSize="17sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="17dp"
        android:layout_width="match_parent"
        android:paddingHorizontal="16dp"
        android:background="@drawable/setting_item_background_round"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/create_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Aa"
            android:textColor="?attr/primaryForthTextColor333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/create_time_num"
            style="@style/customFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"

            android:text="Aa"
            android:textColor="?attr/primaryForthTextColor333333"
            android:textSize="21sp" />

        <com.jaygoo.widget.RangeSeekBar
            android:id="@+id/font_size_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="12dp"
            android:layout_toEndOf="@id/create_time_text"
            android:layout_toStartOf="@id/create_time_num"
            app:rsb_gravity="center"
            app:rsb_max="80"
            app:rsb_min_interval="1"
            app:rsb_mode="single"
            app:rsb_progress_drawable="@color/primary_color"
            app:rsb_progress_drawable_default="@drawable/deckpicker_studied_progress_bar"
            app:rsb_progress_height="3dp"
            app:rsb_thumb_drawable="@drawable/thumb_green" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="9dp"
        android:layout_width="match_parent"
        android:paddingHorizontal="16dp"
        android:background="@drawable/setting_item_background_round"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <LinearLayout
        android:paddingVertical="13dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            style="@style/customFontStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:minWidth="50dp"
            android:text="布局"
            android:textColor="?attr/primaryTextColor222222"
            android:textSize="15sp" />
        <ImageView
            android:id="@+id/ic_layer_top"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_layout_config_bg_selector"
            android:src="@drawable/ic_layout_config_layer_top_selector"/>
        <ImageView
            android:id="@+id/ic_layer_center"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_layout_config_bg_selector"
            android:src="@drawable/ic_layout_config_layer_center_selector"/>
        <ImageView
            android:id="@+id/ic_layer_bottom"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_layout_config_bg_selector"
            android:src="@drawable/ic_layout_config_layer_bottom_selector"/>
    </LinearLayout>
        <LinearLayout
            android:paddingVertical="13dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/customFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:minWidth="50dp"
                android:text="对齐"
                android:textColor="?attr/primaryTextColor222222"
                android:textSize="15sp" />
            <ImageView
                android:id="@+id/ic_align_left"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_layout_config_bg_selector"
                android:src="@drawable/ic_layout_config_align_left_selector"/>
            <ImageView
                android:id="@+id/ic_align_center"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_layout_config_bg_selector"
                android:src="@drawable/ic_layout_config_align_center_selector"/>
            <ImageView
                android:id="@+id/ic_align_right"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_layout_config_bg_selector"
                android:src="@drawable/ic_layout_config_align_right_selector"/>
            <ImageView
                android:id="@+id/ic_align_normal"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_layout_config_bg_selector"
                android:src="@drawable/ic_layout_config_align_normal_selector"/>
        </LinearLayout>
        <LinearLayout
            android:paddingVertical="13dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                style="@style/customFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:minWidth="50dp"
                android:text="背景"
                android:textColor="?attr/primaryTextColor222222"
                android:textSize="15sp" />
            <ImageView
                android:id="@+id/ic_bg_white"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/ic_layout_config_bg_white"/>
            <ImageView
                android:id="@+id/ic_bg_grey"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_layout_config_bg_grey"/>
            <ImageView
                android:id="@+id/ic_bg_brown"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_layout_config_bg_brown"/>
            <ImageView
                android:id="@+id/ic_bg_green"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_layout_config_bg_green"/>
            <ImageView
                android:id="@+id/ic_bg_black"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_layout_config_bg_black"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
