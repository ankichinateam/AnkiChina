<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="286dp"
	android:layout_height="wrap_content"
	android:layout_margin="10dp"
	app:cardBackgroundColor="?attr/mainItemBackgroundColor"
	app:cardCornerRadius="13dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:paddingVertical="15dp"
		android:paddingHorizontal="21dp">
		<TextView
			android:id="@+id/title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:text="选择服务器"
			android:textColor="?attr/primaryTextColor222222"
			android:textSize="17sp"
			android:textStyle="bold" />
		<LinearLayout
			android:id="@+id/ll_content"
			android:layout_marginTop="9dp"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:id="@+id/message"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="这是弹窗"
				android:visibility="gone"
				android:textColor="?attr/primaryTextColor222222"
				android:textSize="15sp" />
			<LinearLayout
				android:id="@+id/ll_edit_content"
				android:layout_marginBottom="15dp"
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<EditText
					android:id="@+id/editor"
					android:theme="@style/MyEditText"
					android:textSize="17sp"
					android:layout_width="match_parent"
					android:inputType="number"
					android:layout_height="43dp"/>
				<TextView
					android:id="@+id/hint"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="4dp"
					android:text="未来每天学习量=新卡数x6"
					android:textColor="?attr/primary_text_third_color999999"
					android:textSize="11sp" />
			</LinearLayout>
		</LinearLayout>

		<RelativeLayout
			android:layout_marginTop="20dp"
			android:id="@+id/rl_common_style_buttons"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:id="@+id/confirm"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentEnd="true"
				android:layout_centerVertical="true"
				android:text="确认"
				android:textColor="?attr/primaryForthTextColor333333"
				android:textSize="17sp" />
			<TextView
				android:id="@+id/cancel"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_toStartOf="@id/confirm"
				android:layout_marginEnd="32dp"
				android:text="取消"
				android:textColor="?attr/primary_text_third_color999999"
				android:textSize="17sp" />
		</RelativeLayout>

	</LinearLayout>
</androidx.cardview.widget.CardView>


